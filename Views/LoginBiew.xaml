<UserControl x:Class="BlogAutoWriter.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource DarkBackgroundBrush}"
             Width="360" Height="260">
    <Grid>
        <!-- 좌측 상단 종료 버튼 -->
        <Button Content="X"
                Width="26" Height="26"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="6,6,0,0"
                Click="CloseBtn_Click"
                Background="Transparent"
                Foreground="White"
                BorderBrush="{x:Null}" FontSize="12" />

        <!-- 로그인 패널 -->
        <StackPanel Width="220" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="로그인" FontSize="16" Foreground="{StaticResource TextBrush}" Margin="0,0,0,16" HorizontalAlignment="Center"/>

            <TextBox x:Name="UserIdInput"
                     Height="30"
                     Margin="0,0,0,8"
                     Padding="6"
                     FontSize="13"
                     Background="White"
                     Text="아이디"
                     Foreground="Gray"
                     GotFocus="RemoveText"
                     LostFocus="AddText"
                     VerticalContentAlignment="Center"
                     BorderThickness="1"
                     BorderBrush="Gray"/>

            <PasswordBox x:Name="PasswordInput"
                         Height="30"
                         Margin="0,0,0,8"
                         Padding="6"
                         FontSize="13"
                         VerticalContentAlignment="Center"
                         BorderThickness="1"
                         BorderBrush="Gray"/>

            <Button x:Name="LoginBtn"
                    Content="로그인"
                    Click="LoginBtn_Click"
                    Height="32"
                    Style="{StaticResource ModernButton}" />

            <ProgressBar x:Name="LoadingBar"
                         IsIndeterminate="True"
                         Visibility="Collapsed"
                         Height="6"
                         Margin="0,10,0,0"/>

            <TextBlock x:Name="ErrorIcon"
                       Text="❌ 로그인 실패"
                       Foreground="Red"
                       FontSize="12"
                       Visibility="Collapsed"
                       Margin="0,6,0,0"
                       HorizontalAlignment="Center"/>

        </StackPanel>
    </Grid>
</UserControl>
