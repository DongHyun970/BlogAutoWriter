<UserControl x:Class="BlogAutoWriter.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:BlogAutoWriter.Views"
             xmlns:common="clr-namespace:BlogAutoWriter.Common"
             Background="{StaticResource DarkBackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 상단 타이틀 -->
            <RowDefinition Height="*"/>    <!-- 메인 콘텐츠 -->
        </Grid.RowDefinitions>

        <!-- 🔹 타이틀 영역 -->
        <DockPanel Grid.Row="0" Height="40" LastChildFill="True">
            <TextBlock Text="BlogAutoWriter"
                       FontSize="18"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Margin="10,0"/>
            <Button Content="X"
                    Width="40" Height="40"
                    Background="Transparent"
                    Foreground="White"
                    Click="CloseBtn_Click"
                    HorizontalAlignment="Right"/>
        </DockPanel>

        <!-- 🔹 메인 콘텐츠 영역 -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- 📝 왼쪽 입력 영역 -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBox x:Name="KeywordInput"
                         Height="34"
                         common:PlaceholderBehavior.Placeholder="키워드를 입력하세요"
                         Margin="0,0,0,10"/>
                
                <Button x:Name="RecommendBtn"
                        Content="추천 키워드"
                        Height="34"
                        Margin="0,0,0,10"/>

                <CheckBox x:Name="ReserveCheck"
                          Content="예약 발행"
                          Margin="0,0,0,10"/>

                <StackPanel x:Name="ReserveTimePanel"
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                    <TextBox Width="100"
                             Height="30"
                             common:PlaceholderBehavior.Placeholder="예: 14:00"/>
                </StackPanel>

                <!-- 본문 작성 영역은 추후 확장 가능 -->
                <TextBlock Text="본문 작성 영역 (예정)"
                           Foreground="Gray"
                           Margin="0,30,0,0"/>
            </StackPanel>

            <!-- ⚙️ 오른쪽 설정 패널 -->
            <Border x:Name="SettingsPanelHost"
                    Grid.Column="1"
                    Background="#292a2e"
                    CornerRadius="4"
                    Padding="10"
                    Visibility="Collapsed">
                <ScrollViewer>
                    <views:SettingsView />
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
