<UserControl x:Class="BlogAutoWriter.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:BlogAutoWriter.Views"
             Background="{StaticResource DarkBackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 상단 헤더 -->
            <RowDefinition Height="*"/>    <!-- 메인 콘텐츠 -->
        </Grid.RowDefinitions>

        <!-- 🔹 상단 타이틀 -->
        <DockPanel Grid.Row="0" Height="40" LastChildFill="True">
            <TextBlock Text="BlogAutoWriter"
                       FontSize="18"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Margin="10,0"/>
            <Button Content="X"
                    Width="40" Height="40"
                    Background="Transparent"
                    Foreground="White"
                    Click="CloseBtn_Click"
                    HorizontalAlignment="Right"/>
        </DockPanel>

        <!-- 🔹 메인 콘텐츠 -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>  <!-- 좌측 입력 -->
                <ColumnDefinition Width="2*"/>  <!-- 우측 설정 -->
            </Grid.ColumnDefinitions>

            <!-- 📝 좌측 영역 -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBox x:Name="KeywordInput"
                         Height="34"
                         PlaceholderText="키워드 입력"
                         Margin="0,0,0,10"/>
                <Button x:Name="RecommendBtn"
                        Content="추천 키워드"
                        Height="34"
                        Margin="0,0,0,10"/>
                <CheckBox x:Name="ReserveCheck"
                          Content="예약 발행"
                          Margin="0,0,0,10"/>
                <StackPanel x:Name="ReserveTimePanel"
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                    <TextBox Width="100" Height="30" Text="HH:mm"/>
                </StackPanel>

                <!-- 🔧 나중에 추가할 수 있는 본문 작성 영역 -->
                <TextBlock Text="본문 작성 영역 (예정)"
                           Foreground="Gray"
                           Margin="0,30,0,0"/>
            </StackPanel>

            <!-- ⚙️ 우측 설정 패널 -->
            <Border Grid.Column="1"
                    Background="#292a2e"
                    CornerRadius="4"
                    Padding="10"
                    Visibility="{Binding IsSettingsVisible, Mode=TwoWay}">
                <ScrollViewer>
                    <views:SettingsView />
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
