<Window x:Class="BlogAutoWriter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BlogAutoWriter"
        Title="BlogAutoWriter"
        Width="400" Height="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Black">

    <Window.Resources>
        <CubicEase x:Key="ease" EasingMode="EaseOut"/>
        <Storyboard x:Key="ExpandMainView">
            <DoubleAnimation Storyboard.TargetName="MainView"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="0.8" To="1.0" Duration="0:0:0.3"
                             EasingFunction="{StaticResource ease}" />
            <DoubleAnimation Storyboard.TargetName="MainView"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="0.8" To="1.0" Duration="0:0:0.3"
                             EasingFunction="{StaticResource ease}" />
            <DoubleAnimation Storyboard.TargetName="MainView"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.3" />
        </Storyboard>
    </Window.Resources>

    <Grid>
        <local:LoginView x:Name="LoginView" />
        <Grid x:Name="MainViewContainer" Visibility="Collapsed"
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <local:MainView x:Name="MainView"
                            Opacity="0"
                            RenderTransformOrigin="0.5,0.5">
                <local:MainView.RenderTransform>
                    <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                </local:MainView.RenderTransform>
            </local:MainView>
        </Grid>
    </Grid>
</Window>
